@using Microsoft.AspNetCore.Identity
@using Microsoft.Extensions.Options

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ecommerce_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Admin_site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecommerce_App.Areas.Admin.styles.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</head>
<body id="body-pd">
    <div class="col-sm-10">
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="l-navbar" id="nav-bar">
                <nav class="nav">
                    <div id="navbar">
                        <a class="nav_logo" asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <i class="fa-solid fa-bars"></i>
                            <span class="nav_logo-name">Ecommerce</span>
                        </a>
                        <div class="nav_list">
                            <a class="nav_link active" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                <i class="fa-solid fa-house"></i>
                                <span class="nav_name">Dashboard</span>
                            </a>
                            <a class="nav_link" asp-area="Admin" asp-controller="Administration" asp-action="Index">
                                <i class="fa-solid fa-user"></i>
                                <span class="nav_name">Users</span>
                            </a>
                            <a class="nav_link" asp-area="Admin" asp-controller="Category" asp-action="Index">
                                <i class="fa-solid fa-sliders"></i>
                                <span class="nav_name">Categories</span>
                            </a>
                            <a class="nav_link" asp-area="Admin" asp-controller="Product" asp-action="Index">
                                <i class="fa-solid fa-store"></i>
                                <span class="nav_name">Products</span>
                            </a>
                        </div>
                    </div>
                    <div class="nav_list">
                        <a class="nav_link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <i class="fa-solid fa-gear"></i>
                            <span class="nav_name">Settings</span>
                        </a>


                        <div class="nav_list">
                            <partial class="nav_link" name="_LoginPartial.cshtml"></partial>
                        </div>
                    </div>
                </nav>
            </div>
        }

        else
        {
            <div class="l-navbar" id="nav-bar">
                <nav class="nav">
                    <a class="nav_logo" asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-bars"></i>
                        <span class="nav_logo-name">Ecommerce</span>
                    </a>
                    @* <div class="nav_list">
                <a class="nav_link" asp-area="" asp-controller="" asp-action="Index">
                <i class="fa-solid fa-language"></i>
                <span class="nav_name">Language</span>
                </a>
                </div>*@
                </nav>
            </div>
        }
    </div>

    <div class="dash_body container height-100">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="d-flex border-top footer text-muted">
            <div class="container">
                &copy; 2023 - Ecommerce_App - <a asp-area="Admin" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
            <div class="lang_box dropdown">
                <a class="dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa-solid fa-language"></i>
                    <span class="nav_name">@Thread.CurrentThread.CurrentUICulture.Name</span>
                </a>
                <div class="lang_menu dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/?ui-culture=en-US">EN</a>
                    <a class="dropdown-item" href="/?ui-culture=ar-SR">AR</a>
                </div>
            </div>
        </footer>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/Admin_site.js" asp-append-version="true"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
