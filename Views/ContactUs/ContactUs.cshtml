@{
    ViewData["Title"] = "Contact Us";
}

<div class="">
    <h4 class="mt-3 ms-4 ps-2 text-uppercase">Contact Us</h4>
    <div class="d-lg-flex d-md-block d-sm-block">
        <div class="col-lg-7 col-md-5">
            <div class="box m-3">
                <form class="m-3" action="" method="post">
                    <input type="text" class="form-control mb-3" id="contact-name" placeholder="Your Name" />
                    <input type="email" class="form-control mb-3" id="contanct-email" placeholder="Your Email" />
                    <input type="text" class="form-control mb-3" id="cohtact-subject" placeholder="Subject" />
                    <textarea class="form-control mb-3" id="contact-message" rows="3"
                              placeholder="Message"></textarea>
                    <input type="submit" class="btn btn-primary mb-3" value="Send" />
                </form>
            </div>
        </div>
        <div class="col-lg-5 col-md-5">
            <div class="m-3 p-3">
                <div class="mapouter">
                    <div class="gmap_canvas">
                        <iframe width="100%" height="400" id="gmap_canvas"
                                src="https://maps.google.com/maps?q=2880%20Broadway,%20New%20York&t=&z=13&ie=UTF8&iwloc=&output=embed"
                                frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                        <a href="https://www.whatismyip-address.com"></a><br />
                    </div>
                </div>
            </div>
            <div class="m-3 p-3">
                <h6><i class="me-3 fa-solid fa-location-dot"></i>2880 Broadway, New York, NY 10025, USA</h6>
                <h6><i class="me-3 fa-solid fa-envelope"></i>ayman4swd@gmail.com</h6>
                <h6><i class="me-3 fa-solid fa-phone"></i>+012 345 67890</h6>
            </div>
        </div>
    </div>
</div>